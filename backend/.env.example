# Server Configuration
NODE_ENV=development
PORT=3000

# Database Configuration
DB_HOST=localhost
DB_USER=root
DB_PASSWORD=your_database_password_here
DB_NAME=hackathon_portal

# Session Configuration
SESSION_SECRET=your_strong_random_secret_key_here_min_32_chars

# Frontend URL (for CORS in production)
FRONTEND_URL=http://localhost:3000

# Email Configuration
# Leave these empty for development (will use Ethereal test email service)
# For production with Gmail: 
#   1. Enable "Less secure app access" OR use App Password
#   2. EMAIL_HOST=smtp.gmail.com
#   3. EMAIL_PORT=587
#   4. EMAIL_USER=your_email@gmail.com
#   5. EMAIL_PASS=your_app_password
# For production with SendGrid/other:
#   Configure accordingly
EMAIL_HOST=
EMAIL_PORT=587
EMAIL_USER=
EMAIL_PASS=
EMAIL_FROM="Hackathon Portal <noreply@hackathonportal.com>"
EMAIL_SECURE=false

# File Upload Configuration
MAX_FILE_SIZE=5242880
UPLOAD_DIR=./uploads
